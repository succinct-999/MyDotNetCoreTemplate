@page
@model LoginModel

@{
    ViewData["Title"] = "登录";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/"><b>后台管理系统</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">账号登录</p>

            <form method="post">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group mt-3">
                    <input class="form-control" placeholder="用户名" asp-for="Input.UserName">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group">
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="input-group mt-3">
                    <input class="form-control" placeholder="密码" asp-for="Input.Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="Input.RememberMe">
                            <label asp-for="Input.RememberMe"></label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">登录</button>
                    </div>
                    <!-- /.col -->
                </div>

            </form>

            <div class="social-auth-links text-center mb-3">
            </div>
            <!-- /.social-auth-links -->

            <p class="mb-1">
                <a asp-page="./ForgotPassword">忘记密码</a>
            </p>
            <p class="mb-0">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">注册账号</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
